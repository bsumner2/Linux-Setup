Configuration {
	display-drun: "Run : ";
	drun-display-format: "{icon} {name}";
	font: "Bitstream Vera Serif Roman 12";
	modi: "window,run,drun";
	show-icons: true;
	icon-theme: "candy-icons";
}
@theme "/dev/null"

* {
	bg: #28282B70;
	searchBoxTxt: #FFFFFF;
	elementTxt: #787CAA;
	elementTxt-selected: #FFFFFF;
	elementTxt-selected-bg: #28282BAA;
	background-color: @bg;
	text-color: @searchBoxTxt;
	
	border: 0;
	margin: 0;
	padding: 0;
	spacing: 0;
}

window {
	width: 512;
	height: 512;
}

element {
	text-color: @elementTxt;
	margin: 0;
	spacing: 0;
}

element selected {
	text-color: @elementTxt-selected;
	background-color: @elementTxt-selected-bg;
}

element-text {
	padding: 8;
	background-color: inherit;
	text-color: inherit;
}
